<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
	</styles>

	<NumberEntry>
		<TextEntry id="TextEntry" textmode="numeric" />
		<Panel class="ChangeValueButtons">
			<Button id="IncrementButton" class="ChangeValueButton ChangeValueButton__Increment" onactivate="NumberEntryIncrementValue()">
				<Panel class="ChangeValueButtonImage" />
				<Label class="ChangeValueButtonLabel" text="+" />
			</Button>
			<Button id="DecrementButton" class="ChangeValueButton ChangeValueButton__Decrement" onactivate="NumberEntryDecrementValue()">
				<Panel class="ChangeValueButtonImage" />
				<Label class="ChangeValueButtonLabel" text="-" />
			</Button>
		</Panel>
	</NumberEntry>
</root>
