<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/bot_match.vcss_c" />
    <include src="s2r://panorama/styles/play_shared.vcss_c" />
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
 </styles>

	<DCGBotMatch hittest="false">
		<Panel class="PlayBody ButtonsVisible">
			<Label class="ContentsHeaderLabel" text="{s:contents_header}"/>
			<Label class="ContentsLabel" text="#DCG_PlayAIGame_SelectYourDeck"/>						

			<DCGDeckLoader id="DeckLoaderPlayer" onmouseover="PlaySoundEffect( DCG_UI.BotSolo_Rollover_ChooseYourDeck )" SoundEventPrefix="DCG_UI.BotSolo" />
			
			<Panel id="LabelAndChallengeSelectorPanel">
				<Label class="ContentsLabel ExtraSpacingForLabel" text="#DCG_PlayAIGame_SelectChallenge"/>
				<DropDown id="ChallengeSelector" dropdownbodyposition="100% 100%" initialselection="0">
					<Label class="DropdownLabel" text="" id="0" />
					<Label class="DropdownLabel" text="" id="1" />
					<Label class="DropdownLabel" text="" id="2" />
					<Label class="DropdownLabel" text="" id="3" />
					<Label class="DropdownLabel" text="" id="4" />
					<Label class="DropdownLabel" text="" id="11" />
					<Label class="DropdownLabel" text="" id="12" />
					<Label class="DropdownLabel" text="" id="13" />
					<Label class="DropdownLabel" text="" id="14" />
					<Label class="DropdownLabel" text="" id="15" />
					<Label class="DropdownLabel" text="" id="16" />
          <Label class="DropdownLabel" text="" id="17" />
          <Label class="DropdownLabel" text="" id="18" />
          <Label class="DropdownLabel" text="" id="19" />
          <Label class="DropdownLabel" text="" id="20" />
          <Label class="DropdownLabel" text="" id="21" />
          <Label class="DropdownLabel" text="" id="22" />
          <Label class="DropdownLabel" text="" id="23" />
          <Label class="DropdownLabel" text="" id="24" />
        </DropDown>
			</Panel>	

			<DCGDeckLoader id="DeckLoaderAI" onmouseover="PlaySoundEffect( DCG_UI.BotSolo_Rollover_ChooseAIDeck )" SoundEventPrefix="DCG_UI.BotSolo_Rollover" />

		  	<Panel id="TimerDifficultyContainer">
				<Panel id="TimerSelectorPanel" onmouseover="UIShowTextTooltip( #DCG_PlayAIGame_ShotClock ) PlaySoundEffect( DCG_UI.BotSolo_Rollover_Timer )" onmouseout="UIHideTextTooltip()">
					<ToggleButton id="AITimerToggleButton" onactivate="OnToggleAITimer()" allowtextselection="false">
						<Label class="ContentsLabel" text="#DCG_PrivateLobby_TimerSelector" />
					</ToggleButton>
				</Panel>
			</Panel>
		</Panel>
		<CustomLayoutPanel id="ButtonContainer" layout="file://{resources}/layout/play_navigation_buttons.xml" />
	</DCGBotMatch>
</root>
