<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/dashboard/dcg_db_single_challenge.vcss_c" />
	</styles>

	<snippets>
		<snippet name="ConditionLabels">
			<Panel class="ConditionLabels">
				<Label id="ConditionName" text="{s:condition_name}: " html="true" />
				<Label id="ConditionValue" text="{s:condition_value}" html="true" />
			</Panel>
		</snippet>
	</snippets>

	<DCGSingleChallenge>
		<Panel id="ChallengeTitleContainer">
			<Image id="ChallengeTitleImage" />
			<Label id="ChallengeTitle" text="{s:challenge_title}" />
		</Panel>
		<Label id="ChallengeDesc" text="{s:challenge_desc}" />
		<Panel id="ConditionContainer" />
		<Panel id="ButtonsContainer">
			<TextButton id="ViewOnMapButton" class="ButtonBevel" text="#DCG_Event_ViewOnMap" />
		</Panel>
	</DCGSingleChallenge>

</root>
