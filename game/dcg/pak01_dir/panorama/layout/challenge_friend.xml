<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/challenge_friend.vcss_c" />
    <include src="s2r://panorama/styles/play_shared.vcss_c" />
 </styles>

	<DCGChallengeFriend hittest="false">
		<Panel class="PlayBody ButtonsVisible">
			<Label class="ContentsHeaderLabel" text="{s:contents_header}"/>
			<Panel class="ChallengeFriends">

				<Panel class="FriendsListHeader">
					<Label class="GameSelectLabelLarge MonoFont" text="{d:friends_online}"/>
					<Label class="GameSelectLabel" text="#DCG_FriendsOnline"/>
				</Panel>
				
				<Panel class="Separator"/>
				<DCGFriendPicker id="ChallengeFriendPicker"/>
			</Panel>	
		</Panel>
		<CustomLayoutPanel id="ButtonContainer" layout="file://{resources}/layout/play_carousel_navigation_buttons.xml" />
	</DCGChallengeFriend>
</root>
