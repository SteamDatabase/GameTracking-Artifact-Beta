<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_event_info.vcss_c" />
	</styles>

	<snippets>
		<snippet name="CurrencyGrantSnippet">
			<Panel class="CurrencyGrantContainer">
				<Label id="CurrencyName" text="{s:currency_name}" />
				<Label id="CurrencyAmount" text="{i:currency_amount}" />
			</Panel>
		</snippet>
	</snippets>

	<DCGTooltipEventInfo class="TooltipContainer" hittest="false" hittestchildren="false" >
		<Label id="ClaimedLabel" text="Claimed" />
		<Panel id="ChallengeInfoContainer">
			<Label text="Challenge: {s:challenge_name}" />
			<Label id="ChallengeDescription" text="Challenge Desc: {s:challenge_desc}" />
			<Label id="WinWithDecklist" text="Double click on Challenge Node to view Decklist" />
			<Panel id="ChallengeCards" />
		</Panel>
		<Panel id="RewardInfoContainer">
			<Label text="Rewards:" />
			<Label id="NoRewardsLabel" text="NoRewards" />
			<Panel id="RewardCards" />
		</Panel>
  </DCGTooltipEventInfo>
</root>
