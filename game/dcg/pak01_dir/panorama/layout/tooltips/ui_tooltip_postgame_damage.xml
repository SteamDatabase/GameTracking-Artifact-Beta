<root>
	<styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/ui_tooltip_postgame_damage.vcss_c" />
	</styles>
  
  <DCGTooltipPostgameDamage>
    <Panel class="TooltipContainer">
      <Panel class="RoundRow">
        <Label class="Round" text="#DCG_PostgameDamageTooltip_Round" />
      </Panel>
      <Panel class="DescriptionRow">
        <Label class="FinalText DescriptionText" text="#DCG_PostgameDamageTooltip_FinalHealth" /><Label class="DamageText DescriptionText" text="#DCG_PostgameDamageTooltip_DamageTaken" />
      </Panel>
      <Panel id="TowerRow_1" class="TowerRow">
        <Label class="Tower" text="#DCG_PostgameDamageTooltip_Tower" />
        <Label class="Damage" text="{d:damage}" />
      </Panel>
      <Panel id="TowerRow_2" class="TowerRow">
        <Label class="Tower" text="#DCG_PostgameDamageTooltip_Tower" />
        <Label class="Damage" text="{d:damage}" />
      </Panel>
      <Panel id="TowerRow_3" class="TowerRow">
        <Label class="Tower" text="#DCG_PostgameDamageTooltip_Tower" />
        <Label class="Damage" text="{d:damage}" />
      </Panel>
    </Panel>
  </DCGTooltipPostgameDamage>
</root>