<root>
	<styles>
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/tooltips/tooltip_chaos_gauntlet_achievement.vcss_c" />
	</styles>
	
  <DCGChaosGauntletAchievementTooltip>
    
    <Panel id="Header">
	      <Label id="AchievementName" text="#DCG_ChaosGauntlet_Achievement_Name" html="true" />
	      <Label id="AchievementValue" text="#DCG_ChaosGauntlet_Achievement_Value" html="true" />
    </Panel>
    
    <Panel id="Body">
        <Panel class="CheeveImageContainer">
          <Panel class="CheeveImage"/>
          <CircularProgressBar id="CheeveProgressBar" />
        </Panel>
        <Panel class="CheeveInfo">
 					<Panel class="CheeveProgress">
    	      <Label id="AchievementDesc" text="#DCG_ChaosGauntlet_Achievement_Desc" html="true" />
            <Panel class="CheeveProgressBottom">
              <Panel class="CheeveNumbers">
                <Label class="CheeveNumber" text="{i:achievement_progress}" />
                <Label class="CheeveNumber" text="/" />
                <Label class="CheeveNumber" text="{i:achievement_max}" />
              </Panel>
            </Panel>
					</Panel>
        </Panel>
    </Panel>
   
  </DCGChaosGauntletAchievementTooltip>
</root>