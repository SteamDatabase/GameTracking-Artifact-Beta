<root>
	<styles>
    	<include src="s2r://panorama/styles/gamestyles.vcss_c" />
    	<include src="s2r://panorama/styles/play_calltoarms.vcss_c" />
    	<include src="s2r://panorama/styles/play_competitive.vcss_c" />
    	<include src="s2r://panorama/styles/play_shared.vcss_c" />    	
 	</styles>

 	<DCGPlayCallToArms class="PrimaryCarouselPanel">
		<DCGScenePanel id="FeaturedEventGraphic_Scene_BG" camera="camera" map="scenes/mainmenu/events/mainmenu_event_parallax_calltoarms_bg" hittest="false" particleonly="false" renderdeferred="true" deferredalpha="true" antialias="true" rotateonmousemove="true" yawmin="-2" yawmax="2" pitchmin="-4" pitchmax="-8"/>
		<Panel id="TopBarDarkener"/>
	 	<Panel id="FeaturedBackground">
			<Panel id="PackStripBackground">
				<Panel id="PackStripLogo"/>
				<Panel id="PackStripVignette"/>
			</Panel>
		</Panel>
		<Panel id="DesciptionBackground"/>
		<DCGScenePanel id="FeaturedEventGraphic_Scene" camera="camera" map="scenes/mainmenu/events/mainmenu_event_parallax_calltoarms" hittest="false" particleonly="false" renderdeferred="true" deferredalpha="true" antialias="true" rotateonmousemove="true" yawmin="-2" yawmax="2" pitchmin="-4" pitchmax="-8"/>						
		<Panel id="FeaturedContainer">
			
			<Panel id="FeaturedHeaderContainer">
				<Panel id="EventDate">
					<Label id="FeaturedEventHeaderLabel" text="#DCG_MainMenu_FeaturedEvent" />
				</Panel>
				<Panel class="LeftRightFlow">
					<Panel id="FeaturedEventNameTitle"/>
					<Label id="FeaturedEventNameLabel" class="FeaturedEventLabel TitleFont" text="({s:featured_event_name})" html="true" />
				</Panel>
				<Label id="FeaturedEventDescLabel" text="{s:featured_event_desc}" />
			</Panel>
			<Panel id="FeaturedContentContainer">
				<Panel id="FeaturedEventCardsContainer">
					<Panel id="Card4" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(4)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck1 ); DCGFeaturedSelectDeck(4)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck1 ); DCGFeaturedHoverDeck(4)" onmouseout="DCGFeaturedUnhoverDeck(4)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
					<Panel id="Card0" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(0)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck0 ); DCGFeaturedSelectDeck(0)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck0 ); DCGFeaturedHoverDeck(0)" onmouseout="DCGFeaturedUnhoverDeck(0)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
					<Panel id="Card3" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(3)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck3 ); DCGFeaturedSelectDeck(3)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck3 ); DCGFeaturedHoverDeck(3)" onmouseout="DCGFeaturedUnhoverDeck(3)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
					<Panel id="Card1" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(1)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck4 ); DCGFeaturedSelectDeck(1)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck4 ); DCGFeaturedHoverDeck(1)" onmouseout="DCGFeaturedUnhoverDeck(1)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
					<Panel id="Card5" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(5)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck5 ); DCGFeaturedSelectDeck(5)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck5 ); DCGFeaturedHoverDeck(5)" onmouseout="DCGFeaturedUnhoverDeck(5)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
          			<Panel id="Card6" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(6)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck6 ); DCGFeaturedSelectDeck(6); DCGAcknowledgeViolator( CTACard6 )" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck6 ); DCGFeaturedHoverDeck(6)" onmouseout="DCGFeaturedUnhoverDeck(6)" hittest="true" >
            			  	<Panel class="DeckCardImage" id="CardImage"/>
            			<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>
          			</Panel>
          			<Panel id="Card2" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(2)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck2 ); DCGFeaturedSelectDeck(2)" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck2 ); DCGFeaturedHoverDeck(2)" onmouseout="DCGFeaturedUnhoverDeck(2)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
			        <Panel id="Card7" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(7)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck7 ); DCGFeaturedSelectDeck(7); DCGAcknowledgeViolator( CTACard7 )" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck7 ); DCGFeaturedHoverDeck(7)" onmouseout="DCGFeaturedUnhoverDeck(7)" hittest="true" >
            			<Panel class="DeckCardImage" id="CardImage"/>
            			<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>
          			</Panel>
					<Panel id="Card100" class="DeckCardPanel" ondblclick="DCGFeaturedDeckDblCLick(100)" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Deck100 ); DCGFeaturedSelectDeck(100); DCGAcknowledgeViolator( CTACard100 )" onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Deck100 ); DCGFeaturedHoverDeck(100)" onmouseout="DCGFeaturedUnhoverDeck(100)" hittest="true" >
						<Panel class="DeckCardImage" id="CardImage"/>
						<DCGScenePanel class="RegisteredDeckBorder" camera="camera" map="scenes/mainmenu/mainmenu_card_highlight" hittest="false" require-composition-layer="true" light="model_light" particleonly="false"  renderdeferred="true" deferredalpha="true" antialias="true"/>		
					</Panel>
				</Panel>
				<Panel id="FeaturedEventContent">
					<Panel id="FeaturedDeckDetails">
						<Panel id="FeaturedEventContentTitle">
							<Label id="FeaturedEventDeckName" class="TitleFont" text="{s:featured_deck_name}" html="true" />
							<Panel id="CardColor1" class="CardColors" />
							<Panel id="CardColor2" class="CardColors" />
						</Panel>
						<Label id="DeckDescription" class="DeckDescriptionText" text="{s:event_deck_description}" html="true" />
					</Panel>
					<Panel id="StreakAndFindMatchContainer">
						<Panel id="CurrentWins" class="StreakContainer">
							<Label id="CurrentWinsLabel" class="StreakType" text="#DCG_Gauntlet_CurrentStreak" />
							<Label id="CurrentWinsNumber" class="StreakValue" text="{i:current_wins}" />
						</Panel>
						<Panel id="DeckWinStreak" class="StreakContainer">
							<Label id="DeckWinsLabel" class="StreakType" text="#DCG_Gauntlet_DeckStreak"/>
							<Label id="DeckWinsNumber" class="StreakValue" text="{i:deck_win_streak}" />
						</Panel>
						<Panel id="FeaturedActions">
								<Button id="NextSelectionButton"
									onmouseover="PlaySoundEffectIfPanelEnabled( DCG_UI.Featured_Rollover_Start )"
									onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Start ); DCGJoinFeaturedGauntlet()"
								>
									<Panel class="NextSelectionLabelContainer">
										<Label id="NextSelectionLabel" text="{s:next_match_text}"/>
									</Panel>
								</Button>
								<Button id="AbandonGauntletButton" onactivate="PlaySoundEffect( DCG_UI.Featured_Select_Abandon ); DCGConfirmAbandonGauntlet()"  onmouseover="PlaySoundEffect( DCG_UI.Featured_Rollover_Abandon ); UIShowTextTooltip( #DCG_Gauntlet_AbandonRun_Featured )" onmouseout="UIHideTextTooltip()">
									<Panel id="AbandonGauntletX" />
								</Button>
						</Panel>										
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<Panel id="FeaturedLeaderboardContainer">
			<Panel class="FeaturedLeaderboardHeader">
				<Label id="FeaturedLeaderboardTitle" text="{s:featured_leaderboard_title}"/>
				<Label id="FeaturedLeaderboardDeckName" text="{s:featured_leaderboard_deck_name}"/>
			</Panel>
			
			<DCGLeaderboard id="PerDeckStreakLeaderboard" class="HidePrevButton HideNextButton HideLastButton"/>
		</Panel>
	</DCGPlayCallToArms>
</root>


