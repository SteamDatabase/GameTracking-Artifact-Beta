<root>
	<styles>
	  <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_paste_board.vcss_c" />
	</styles>

  <Panel class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
    <Panel class="MainBody">
      <Label class="PopupTitle" text="#DCG_PasteBoard_Title"/>

      <Panel class="LabelRow">
        <TextEntry id="FeedbackMsg" placeholder="#DCG_PasteBoard_TextPlaceholder" undohistory="enabled" maxchars="4096" multiline="true"/>
      </Panel>
    
      <Panel class="ButtonRow"> 
        <Button class="PopupButton" onactivate="UIPopupButtonClicked()">
          <Label text="#Cancel"/>
        </Button>       
        <Button class="PopupButton" id="Min" onactivate="DCGQuickBoard( min )" enabled="true">
          <Label text="#DCG_PasteBoard_Min"/>
        </Button>              
        <Button class="PopupButton" id="Zoo" onactivate="DCGQuickBoard( zoo )" enabled="true">
          <Label text="#DCG_PasteBoard_Zoo"/>
        </Button>   	 
      
        <Button class="PopupButton" id="OKButton" onactivate="DCGSubmitPasteBoard()" enabled="false">
          <Label text="#DCG_PasteBoard_Submit"/>
        </Button>
      </Panel>

    </Panel>
    
	</Panel>
</root>
