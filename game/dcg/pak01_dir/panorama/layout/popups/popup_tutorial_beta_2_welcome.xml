<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_tutorial_beta_2_welcome.vcss_c" />
	</styles>
		
	<PopupTutorialBetaTwoWelcome hittest="true" oncancel="UIPopupButtonClicked(DCGShowTutorialLauncher(true))">
		<Panel id="SpeechBubble">
			<Label id="ThanksLabel" class="center_align MonoFont" text="#DCG_Popup_CampaignTutorialTwoBetaSpeechBubbleThanks" />
			<Label id="ForHelpingUsLabel" class="center_align MonoFont" text="#DCG_Popup_CampaignTutorialTwoBetaSpeechBubbleForHelping" />
		</Panel>
		<Panel id="FakeCenter">
			<Panel id="TutorialHeaderContainer" class="center_align ">
				<Label id="TutorialName" class="center_align" text="#DCG_Popup_CampaignTutorialTwoBetaTitle" />
			</Panel>
			
			<Panel id="DodgeTheImp">
				<Label id="TutorialDescLabel"  text="#DCG_Popup_CampaignTutorialTwoBetaDesc" />
			

			</Panel>
			<TextButton id="ContinueButton" class="center_align" text="#DCG_Popup_CampaignTutorialTwoLaunchButton" onactivate="DCGShowTutorialMissionSelectionPopup()" />

			<Panel id="BottomContainer" class="center_align">
				<TextButton id="SkipButton" class="center_align" text="#DCG_Popup_CampaignTutorialTwoSkipButton" onactivate="UIPopupButtonClicked(DCGShowTutorialLauncher(true))" />
			</Panel>
		</Panel>
	</PopupTutorialBetaTwoWelcome>
</root>
