<root>
	<styles>
    <include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
    <include src="s2r://panorama/styles/play_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_generic.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_change_account_badge.vcss_c" />
    <include src="s2r://panorama/styles/play_carousel_navigation_buttons.vcss_c" />

  </styles>

  <Panel class="PopupPanel" popupbackground="dim" >
    <Panel id="PopupContainer">
      <Panel id="MainContentsPadding">
        <Panel class="PopupHeader">
          <Label class="GameSelectLabel" text="#DCG_Change_Account_Badge_Title"/>
          <Button id="ClosePopupButton" class="CloseButton" onactivate="UIPopupButtonClicked()"/>
        </Panel>
        <Panel id="BadgeContainer"/>
      </Panel>

      <Panel class="PopupBottomContainer">
        <Button id="SelectBadgeButton" class="PopupButton" onactivate="ConfirmAccountBadge()" >
          <Label  text="#DCG_Change_Account_Badge_Select" />
        </Button>
      </Panel>
    </Panel>
  </Panel>
</root>
