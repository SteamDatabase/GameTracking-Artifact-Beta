<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
		<include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
		<include src="s2r://panorama/styles/popups/popup_explain.vcss_c" />
	</styles>

	<PopupExplain popupbackground="dim" oncancel="UIPopupButtonClicked()">
    <Panel class="MainBody PopupPanel">
      <Panel class="TextContainer">
        <Label class="Title" text="{s:title}" />
        <Label class="Body" text="{s:body1}" />
        <Label class="Body" text="{s:body2}" />
      </Panel>

      <Panel class="BottomButtonContainer" >
        <Button id="FindMatchButton" onactivate="UIPopupButtonClicked()">
          <Label text="#OK"/>
        </Button>
      </Panel>
    </Panel>
    <Panel class="KeyArt" hittest="false"/>
	</PopupExplain>
</root>
