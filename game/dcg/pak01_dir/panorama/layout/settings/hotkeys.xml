<root>
	<styles>
		<include src="s2r://panorama/styles/gamestyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_settings.vcss_c" />
  </styles>

  <Panel>
    <Panel id="KeyBindings" class="KeyBindings">
      <Panel id="Column0" class="HotKeySettingsColumn">
        <Panel class="SettingsSection">
          <Label text="#DCG_Keybindings_GameFlow" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="ActivatePassCoinBinder" text="#DCG_Keybindings_ActivatePassCoin" bind="ActivatePassCoin" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_ActivatePassCoin, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CancelCastingBinder" text="#DCG_Keybindings_CancelCasting" bind="CancelCasting" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CancelCasting, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="PauseBinder" text="#DCG_Keybindings_Pause" bind="Pause" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_Pause, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="ToggleAutoPassBinder" text="#DCG_Keybindings_ToggleAutoPass" bind="ToggleAutoPass" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_ToggleAutoPass, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="DevShowDecklistBinder" text="#DCG_Keybindings_ShowDecklist" bind="DevShowDecklist" />
          <DCGSettingsKeyBinder id="DevShowDecklistOpponentBinder" text="#DCG_Keybindings_ShowOpponentsDecklist" bind="DevShowDecklistOpponent" />

        </Panel>
        <Panel class="SettingsSection">
          <Label text="#DCG_Keybindings_MoveCamera" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="CameraLaneLeftBinder" text="#DCG_Keybindings_MoveLaneLeft" bind="CameraLaneLeft" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraLeftLane, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLaneLeftAlternateBinder" text="#DCG_Keybindings_MoveLaneLeftAlternate" bind="CameraLaneLeftAlternate" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraLeftLaneAlternate, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLaneRightBinder" text="#DCG_Keybindings_MoveLaneRight" bind="CameraLaneRight" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraRightLane, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLaneRightAlternateBinder" text="#DCG_Keybindings_MoveLaneRightAlternate" bind="CameraLaneRightAlternate" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraRightLaneAlternate, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraToggleStrategicBinder" text="#DCG_Keybindings_CameraToggleStrategic" bind="CameraToggleStrategic" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraZoom, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLane1Binder" text="#DCG_Keybindings_MoveToLane1" bind="CameraLane1" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraLane1, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLane2Binder" text="#DCG_Keybindings_MoveToLane2" bind="CameraLane2" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraLane2, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="CameraLane3Binder" text="#DCG_Keybindings_MoveToLane3" bind="CameraLane3" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CameraLane3, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
        </Panel>
        <Panel class="SettingsSection">
          <Label text="#DCG_Keybindings_Shop" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="ToggleShopBinder" text="#DCG_Keybindings_ToggleShop" bind="ToggleShop" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_ToggleShop, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="HoldSecretShopCardBinder" text="#DCG_Keybindings_HoldSecretShopCard" bind="HoldSecretShopCard" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_HoldSecretShopCard, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
        </Panel>
      </Panel>
      <Panel id="Column1" class="HotKeySettingsColumn">
        <Panel class="SettingsSection">
          <Label text="#DCG_Keybindings_Hand" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="CycleHandSortMethodBinder" text="#DCG_Keybindings_CycleHandSortMethod" bind="CycleHandSortMethod" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_CycleHandSortMethod, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="HandScrollLeftBinder" text="#DCG_Keybindings_HandScrollLeft" bind="HandScrollLeft" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_HandScrollleft, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="HandScrollRightBinder" text="#DCG_Keybindings_HandScrollRight" bind="HandScrollRight" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_HandScrollRight, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="ToggleHandDuringDeploymentBinder" text="#DCG_Keybindings_ToggleHandDuringDeployment" bind="ToggleHandDuringDeployment" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_ToggleHandDuringDeployment, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
        </Panel>
        <Panel class="SettingsSection">
          <Label text="#DCG_Keybindings_Chat" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="ToggleUnitChatBinder" text="#DCG_Keybindings_ToggleUnitChat" bind="ToggleUnitChat" onmouseover="UIShowTextTooltipStyled( #DCG_Hotkeys_Tooltip_ToggleUnitChat, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
          <DCGSettingsKeyBinder id="SendCustomMessageBinder" text="#DCG_Keybindings_SendCustomMessage" bind="SendCustomMessage" onmouseover="UIShowTextTooltipStyled( #DCG_Keybindings_SendCustomMessage, BindingsTooltip)" onmouseout="UIHideTextTooltip()" />
        </Panel>
        <Panel class="SettingsSection DevBindings">
          <Label text="#DCG_Keybindings_Dev" class="SectionHeader"/>
          <Panel class="SectionHeaderLineNoMargin"/>
          <DCGSettingsKeyBinder id="DevConsoleBinder" text="#DCG_Keybindings_Console" bind="DevConsole" />
          <DCGSettingsKeyBinder id="DevDebugAttributeListsBinder" text="#DCG_Keybindings_DebugAttributeLists" bind="DevDebugAttributeLists" />
          <DCGSettingsKeyBinder id="DevDoAThingBinder" text="#DCG_Keybindings_DoAThing" bind="DevDoAThing" />
        </Panel>
      </Panel>
    </Panel>
  </Panel>
</root>


