<root>
	<styles>
	    <include src="s2r://panorama/styles/dota_card_game_styles.vcss_c" />
		<include src="s2r://panorama/styles/card/card_title_bar.vcss_c" />
	</styles>

	<Panel class="CardHeaderContainer">

		<Panel class="HeroIcon">
		  <Image id="IncludeImage" />
		</Panel>

		<Panel class="CardCostContainer" onmouseover="DCGShowInspectManaTooltip()" onmouseout="DCGHideInspectManaTooltip()">
			<Panel class="CardCostCenteringPanel">
			<Panel class="CardCostBackground">
				<Panel class="CrossLaneLeftIcon"/>
				<Label id="CardCost" text="{s:cardCost}"/>
				<Panel class="QuickIcon"/>
				<Panel class="CrossLaneRightIcon"/>
			</Panel>
		</Panel>
		</Panel>

  	<Panel class="CardNameContainer">
	  	<Label class="CardName" text="{s:cardName}" />
	  </Panel>

	</Panel>
</root>
